{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Blind Ledger tx",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "_id": {
        "type": "string",
        "format": "uuid",
        "coerce": true
      },
      "test": {
        "type": "integer"
      },
      "amount": {
        "type": "object",
        "properties": {
          "%share": {
            "type": "integer"
          }
        },
        "required": [
          "%share"
        ]
      }
    },
    "required": [
      "_id",
      "test",
      "amount"
    ]
  }
}